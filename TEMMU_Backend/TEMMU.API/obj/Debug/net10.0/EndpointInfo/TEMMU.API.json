        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "style": {
            "minLength": 1,
            "type": "string"
          },
          "healthBase": {
            "maximum": 1500,
            "minimum": 500,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "FighterCharacterReadDTO": {
        "required": [
          "name",
          "style"
        ],
        "type": "object",
        "properties": {
