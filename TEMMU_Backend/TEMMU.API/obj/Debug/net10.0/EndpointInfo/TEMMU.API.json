      "AuthResponseDTO": {
        "type": "object",
        "properties": {
          "isSuccess": {
            "type": "boolean"
          },
          "token": {
            "type": "string",
            "nullable": true
          },
          "errorMessage": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FighterCharacterCreationDTO": {
        "required": [
          "name",
          "style"
